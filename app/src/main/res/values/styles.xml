<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="header">

    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/ripple_unbounded</item>
        <item name="android:padding">8dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Button_Large" parent="Button">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Button_Large_More" parent="Button_Large">
        <item name="android:drawableTop">@drawable/ic_more</item>
        <item name="android:drawablePadding">-4.5dp</item>
    </style>

    <style name="Button_Large_Text" parent="Button">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Button_Orange" parent="Button">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Button_Orange_Large" parent="Button_Large">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Button_Orange_Large_More" parent="Button_Orange_Large">
        <item name="android:drawableTop">@drawable/ic_more</item>
        <item name="android:drawablePadding">-4.5dp</item>
    </style>

    <style name="Button_Orange_Large_Text" parent="Button_Orange_Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Button_Orange_Large_Text_More" parent="Button_Orange_Large_Text">
        <item name="android:drawableTop">@drawable/ic_more</item>
        <item name="android:drawablePadding">-4.5dp</item>
    </style>

    <style name="Button_Purple_Large" parent="Button_Large">
        <item name="android:textColor">@color/colorPurple</item>
    </style>

    <style name="Button_Purple_Large_More" parent="Button_Purple_Large">
        <item name="android:drawableTop">@drawable/ic_more</item>
        <item name="android:drawablePadding">-4.5dp</item>
    </style>

    <style name="Button_Purple_Large_Text" parent="Button_Purple_Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Button_Purple_Large_Text_More" parent="Button_Purple_Large_Text">
        <item name="android:drawableTop">@drawable/ic_more</item>
        <item name="android:drawablePadding">-4.5dp</item>
    </style>

    <style name="Button_Fn" parent="Button">
        <item name="android:background">@drawable/ripple_corners</item>
        <item name="android:padding">6dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">90dp</item>
    </style>

    <style name="Button_Fn_More" parent="Button_Fn">
        <item name="android:drawableTop">@drawable/ic_more</item>
        <item name="android:drawablePadding">-5dp</item>
    </style>

    <style name="Button_Fn_Orange" parent="Button_Fn">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Button_Fn_Orange_More" parent="Button_Fn_More">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
